<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/six_teen_dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_yellow_background" />

        <TextView
            android:id="@+id/tv_discounts_up_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:text="@string/_50"
            android:textColor="@color/dark_green"
            android:textSize="@dimen/twenty_sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_rating" />

        <TextView
            android:id="@+id/m_thirty_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ninety_dp"
            android:layout_marginTop="@dimen/ninety_dp"
            android:fontFamily="@font/roboto_italic"
            android:text="-30%"
            android:textColor="@color/very_light_green"
            android:textSize="@dimen/twenty_sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/m_fifty_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="@dimen/sixty_dp"
            android:fontFamily="@font/roboto_italic"
            android:text="-50%"
            android:textColor="@color/very_dark_green"
            android:textSize="@dimen/fourty_four_sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/m_fourty_p"
            android:layout_width="wrap_content"
            android:text="@string/_40"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/light_green"
            android:layout_marginStart="200dp"
            android:layout_marginTop="@dimen/thirty_six_dp"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>