<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:padding="@dimen/two_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_heart_pro"
            />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_samsung_a52"
            android:layout_margin="@dimen/six_teen_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_name_phone"
            android:text="@string/samsung_galaxy_a52_5g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty_two_dp"
            app:layout_constraintTop_toBottomOf="@id/iv_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_price"
            app:layout_constraintTop_toBottomOf="@id/tv_name_phone"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/_45_000"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:padding="@dimen/two_dp"
app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_heart"
            />

        <ImageView
            android:id="@+id/iv_phone_right"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_samsung_a52"
            android:layout_margin="@dimen/six_teen_dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_name_phone_right"
            android:text="@string/samsung_galaxy_a52_5g"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/thirty_two_dp"
            app:layout_constraintTop_toBottomOf="@id/iv_phone_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_price_right"
            app:layout_constraintTop_toBottomOf="@id/tv_name_phone_right"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/_45_000"
            android:textSize="@dimen/twenty_sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>